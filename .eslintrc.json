{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"], // requires semicolons
    "quotes": ["error", "single"], // reguires single quotes
    "arrow-parens": ["error", "always"] // requires parens around arrow functions
  }
}
